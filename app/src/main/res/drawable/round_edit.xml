<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="#FFFFFF"/>
            <stroke
                android:width="2.3dp"
                android:color="#3a68ff" />
            <corners
                android:radius="20dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="15dp"
                android:top="2dp"
                android:right="10dp"
                android:bottom="2dp"
                />
        </shape>
    </item>

</selector>